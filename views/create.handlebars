
	<div class="main">
		<div class="form-container">
			<form action="/new" method="post">
				<h1>Start Event</h1>
				<label for="event">Event Name</label><br>
				<input type="text" name="event" id="eventInput" autocomplete="off" required><br><p class="warning" id="eventWar"></p><br>
				<label for="name">User Name</label><br>
				<input type="text" name="name" required><br><br>
				<label for="email">Email</label><br>
				<input type="email" name="email" required><br><br>
				<label for="pass">Password</label><br>
				<input type="password" name="pass" required><br><br>
				<label for="mobile">Mobile Number</label><br>
				<input type="number" name="mobile" required><br><br>
				<input type="submit" name="Create" value="Create" id="submit" style="max-width:90px;font-size: 100%;" class="button">
			</form>
		</div>
	</div>
	<script type="text/javascript">
		var eventIn = document.getElementById('eventInput');
		eventIn.addEventListener("keyup",(event) => {
			var xhttp = new XMLHttpRequest();
			xhttp.onreadystatechange = function() {
		    	if (this.readyState == 4 && this.status == 200) {
		    		document.getElementById("eventWar").innerHTML = this.responseText;
		    		if(this.responseText!=''){
		    			document.getElementById('submit').disabled = true;
		    		}
		    		else{
		    			document.getElementById('submit').disabled = false;
		    		}
		    	}
			};
			xhttp.open("GET", "/eventName/?e="+eventIn.value, true);
		  	xhttp.send();
		});
	</script>
